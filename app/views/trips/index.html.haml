%h1 Listing trips

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Location
      %th Date
      %th User
      %th
      %th
      %th

  %tbody
    - @trips.each do |trip|
      %tr
        %td= trip.name
        %td= trip.description
        %td= trip.location
        %td= trip.date
        %td= trip.user
        %td= link_to 'Show', trip
        %td= link_to 'Edit', edit_trip_path(trip)
        %td= link_to 'Destroy', trip, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Trip', new_trip_path
