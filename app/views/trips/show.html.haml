%p#notice= notice

%p
  %b Name:
  = trip.name
%p
  %b Description:
  = trip.description
%p
  %b Location:
  = trip.location
%p
  %b Date:
  = trip.date
%p
  %b User:
  = trip.user

%p
  %b Invite:
  = simple_form_for :invite, { url: trip_invite_path(trip) } do |f|
    = f.input :email
    = f.input :name
    = f.submit

= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-primary'
\|
= link_to 'Back', trips_path, class: 'btn btn-default'
